# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost
CLIENT_URL=http://localhost:3000

# Database Configuration
DB_NAME=chatysp
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_REGISTRATION_KEY=your-admin-registration-key-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (Para notificaciones del coach)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-contraseña-de-aplicacion

# Email del coach (donde llegan las notificaciones de tips diarios)
COACH_EMAIL=coach@ejemplo.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis Configuration (Optional - for production scaling)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# ============================================
# WhatsApp Configuration
# ============================================

# Provider: 'meta' (WhatsApp Business API), 'twilio', o 'simulated'
WHATSAPP_PROVIDER=simulated

# WhatsApp Business API (Meta) Configuration
# Obtén estas credenciales en https://developers.facebook.com/
WHATSAPP_ACCESS_TOKEN=your_meta_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_API_VERSION=v21.0

# Twilio Configuration (Alternativa a Meta)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Número destino para tips diarios (formato: código país + número sin + ni espacios)
COACH_WHATSAPP_NUMBER=5491151027942

# ============================================
# Daily Tips Configuration
# ============================================

# Hora de envío de tips diarios (formato cron: minuto hora * * día-semana)
# Ejemplo: "0 9 * * 1-5" = Lunes a Viernes a las 9:00 AM
DAILY_TIP_SEND_TIME=0 9 * * 1-5

# Timezone para el scheduler
TZ=America/Argentina/Buenos_Aires
